<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/completeorderImage"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/completeOrderproductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunsilk"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/completeOrderbrandId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oliver"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_3sdp" />
            <TextView
                android:id="@+id/completeOrderprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 370"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#E17F00"
                android:layout_marginTop="@dimen/_30sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/_7ssp">

            <TextView
                android:id="@+id/completeOrderpocessingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reviewOrderButton"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/smallbutton"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:text="Review order"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="#000"
        android:layout_margin="@dimen/_10sdp"
        />

</LinearLayout>
