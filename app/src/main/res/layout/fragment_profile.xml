<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="#FFF"
        android:background="#E17F00"
        />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profileicon"
            android:background="@drawable/circleimage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Wahid Malik"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:rowCount="9"
        android:columnCount="3"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
           />
        <ImageButton
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="#FFF"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/homeicon"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            />
        <ImageButton
            android:id="@+id/addressProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:background="#FFF"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:id="@+id/notificaionsImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="#FFF"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifications"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="#FFF"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wallet"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:id="@+id/walletProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="#FFF"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/policy"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policies"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:id="@+id/policyProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:background="#FFF"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/help"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help and center"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:id="@+id/helpProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:background="#FFF"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logout"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            />
    </GridLayout>

</LinearLayout>