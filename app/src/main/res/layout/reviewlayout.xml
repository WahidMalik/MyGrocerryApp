<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_2sdp"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3"
        >

        <ImageView
            android:id="@+id/reviewCustomerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            />
        <TextView
            android:id="@+id/customerReviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_7sdp"
            />
        <RatingBar
            android:id="@+id/reviewratings"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="end"
            />
    </GridLayout>

    <TextView
        android:id="@+id/reviewtext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <ImageView
            android:id="@+id/ReviewImage1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            />
        <ImageView
            android:id="@+id/ReviewImage2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            />
        <ImageView
            android:id="@+id/ReviewImage3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            />
        <ImageView
            android:id="@+id/ReviewImage4"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            />
        <ImageView
            android:id="@+id/ReviewImage5"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>
    </LinearLayout>

</LinearLayout>