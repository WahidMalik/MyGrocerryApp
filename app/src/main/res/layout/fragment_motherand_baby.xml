<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#C1BBBB"
    android:fitsSystemWindows="true"
    tools:context=".MotherandBabyFragment">

    <Spinner
        android:id="@+id/spinnerClothes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>

    <Spinner
        android:id="@+id/spinnerToys"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>
    <Spinner
        android:id="@+id/spinnerGear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>

    <Spinner
        android:id="@+id/spinnerNursery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>
    <Spinner
        android:id="@+id/spinnerFeeding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>
    <Spinner
        android:id="@+id/spinnerHealth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>

    <Spinner
        android:id="@+id/spinnerDipering"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>