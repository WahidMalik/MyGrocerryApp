<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:gravity="center">

<LinearLayout
android:layout_width="match_parent"
    android:layout_height="wrap_content">

<CheckBox
android:id="@+id/cartCheckBox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/_35sdp"/>

<ImageView
    android:id="@+id/cartItemImage"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_90sdp"
    android:background="@drawable/transparentblack"/>

<LinearLayout
    android:layout_width="@dimen/_1sdp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

<TextView
android:id="@+id/cartProductName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sunsilk"
android:textStyle="bold"
android:textSize="@dimen/_13ssp"
android:textColor="#000"
android:layout_marginStart="@dimen/_5sdp"/>

<TextView
android:id="@+id/cartProductBrandName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sunsilk"
android:textColor="#000"
android:layout_marginStart="@dimen/_5sdp"
android:layout_marginTop="@dimen/_3sdp"/>

<TextView
android:id="@+id/cartProductAmount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Rs. 550"
android:layout_marginStart="@dimen/_5sdp"
android:layout_marginTop="@dimen/_35sdp"
android:textSize="@dimen/_13ssp"
android:textStyle="bold"
android:textColor="#E17F00"/>
    </LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginStart="@dimen/_1sdp">

<ImageView
    android:id="@+id/cartDeleteIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/delete"
    android:layout_marginStart="@dimen/_35sdp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cartMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:id="@+id/cartProductQuantity"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:background="@drawable/smallbutton"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:id="@+id/cartPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="@dimen/_15ssp"/>
</LinearLayout>
</LinearLayout>
    </LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="@dimen/_1sdp"
android:background="#000"
android:layout_marginTop="@dimen/_10sdp"
android:layout_marginBottom="@dimen/_10sdp"
android:layout_marginStart="@dimen/_25sdp"
android:layout_marginEnd="@dimen/_25sdp"/>
    </LinearLayout>
