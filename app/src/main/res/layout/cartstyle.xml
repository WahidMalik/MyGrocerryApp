<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center">

<LinearLayout
android:layout_width="match_parent"
    android:layout_height="wrap_content">

<CheckBox
android:id="@+id/cartCheckBox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="40dp"/>

<ImageView
    android:id="@+id/cartItemImage"
    android:layout_marginStart="25dp"
    android:layout_width="110dp"
    android:layout_height="120dp"
    android:background="@drawable/transparentblack"/>

<LinearLayout
android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

<TextView
android:id="@+id/cartProductName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sunsilk"
android:textStyle="bold"
android:textSize="15sp"
android:textColor="#000"
android:layout_marginStart="5dp"/>

<TextView
android:id="@+id/cartProductBrandName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sunsilk"
android:textColor="#000"
android:layout_marginStart="5dp"
android:layout_marginTop="3dp"/>

<TextView
android:id="@+id/cartProductAmount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Rs. 550"
android:layout_marginStart="5dp"
android:layout_marginTop="50dp"
android:textSize="15sp"
android:textStyle="bold"
android:textColor="#E17F00"/>
    </LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginStart="50dp">

<ImageView
    android:id="@+id/cartDeleteIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/delete"
    android:layout_marginStart="50dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cartMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/cartProductQuantity"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/smallbutton"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/cartPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"/>
</LinearLayout>
</LinearLayout>
    </LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#000"
android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
android:layout_marginStart="25dp"
android:layout_marginEnd="25dp"/>
    </LinearLayout>
