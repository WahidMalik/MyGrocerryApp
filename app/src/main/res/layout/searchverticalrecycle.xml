<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/transparentbutton"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparentbutton" />

            <ImageView
                android:id="@+id/searchVerticalImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp" />

            <ImageButton
                android:id="@+id/searchVerticalHeart"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/heart"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/searchItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Sunsilk"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ratingstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star" />

        <TextView
            android:id="@+id/searchItemRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="4.5/5"
            android:layout_marginLeft="@dimen/_5sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 550"
            android:textStyle="bold"
            android:textSize="@dimen/_3ssp"
            android:textColor="#E17F00"
            android:layout_marginLeft="@dimen/_5sdp" />

        <TextView
            android:id="@+id/cutpirce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 700"
            android:textColor="#000"
            android:layout_marginStart="@dimen/_10sdp" />

    </LinearLayout>

</LinearLayout>
